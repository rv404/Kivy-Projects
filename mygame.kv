<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<ExitButton>:
    font_size: 32

<GameWindow>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    canvas:
        Rectangle:
            pos: ((root.width/2)-5, 0)
            size: (10, self.height)
                
    Label:
        font_size: 70
        center_x: root.width/4
        top: root.top-25
        text: str(root.player1.score)
        
    Label:
        font_size: 70
        center_x: root.width*3/4
        top: root.top-25
        text: str(root.player2.score)
        
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.height/2
        
    PongPaddle:
        id: player_right
        x: root.width-25
        center_y: root.height/2
        
    ExitButton:
        size: (80, 50)
        background_color: (0.75, 0, 0.75, 0.75)
        center_x: root.width/2
        y: root.y+5
        text: "Exit"
        on_press: quit()